<?xml version="1.0" encoding="utf-8"?> 
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
	
        <!-- Header -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/torrent_card"
            android:layout_gravity="center"
            android:baselineAligned="false"
            android:layout_margin="4dp">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
     <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="left|center_vertical">
				
         
         		<ImageView
                    android:id="@+id/tCat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:focusable="false"
                    android:src="@drawable/ic_torrent_default" />
                <ImageView
                    android:id="@+id/tIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:focusable="false"
                    android:src="@drawable/ic_torrent_default" />

                <TextView
                        android:id="@+id/tTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:text=".Torrent title"
                        android:layout_weight="1"
                        android:textColor="@color/gks_color_userName"
                        android:layout_gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textStyle="bold"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:lines="1"/>

            </LinearLayout>
    
    </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="4dp">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="3">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/linearLayout4">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Size :"
                            android:textColor="#000"
                            android:textSize="14sp" />

                        <TextView
                                android:id="@+id/tSize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="700 Mo"
                                android:textColor="#88000000"
                                android:textSize="14sp"
                                android:layout_marginLeft="5dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:singleLine="true"
                            android:text="completed : "
                            android:textColor="#000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tCompleted"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="5dp"
                            android:text="62"
                            android:textColor="#88000000"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical">

                        <TextView
                                android:id="@+id/tSeeders"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:text="73"
                                android:textColor="@color/gks_color_GoLeft"
                                android:textSize="14sp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:layout_marginRight="5dp"/>

                        <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:text="Seeders"
                               
                                android:textSize="14sp"
                                android:singleLine="true"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:id="@+id/linearLayout5">

                        <TextView
                                android:id="@+id/tLeechers"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:text="4"
                                android:textColor="@color/gks_color_UpLeft"
                                android:layout_weight="1"
                                android:textSize="14sp"
                                android:gravity="right"
                                android:layout_marginRight="5dp"/>

                        <TextView
                                android:id="@+id/textView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Leechers"
                                
                                android:textSize="14sp"
                                android:singleLine="true"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
  </LinearLayout>